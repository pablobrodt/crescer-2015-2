package br.com.cwi.crescer;

import java.util.ArrayList;
import java.util.List;

public class LinkedList {

    private Node first, last;

    public void addFirst(String value) {
        Node node = new Node(value, first);
        if (first == null) {
            last = node;
        }
        first = node;
    }

    public void addLast(String value) {
        Node novoNodo = new Node(value);
        if(first == null){
            first = novoNodo;
        }
        this.last = novoNodo;
    }

    public String getFirst() {
        return this.first.getValue();
    }

    public String getLast() {
        return this.last.getValue();
    }
    
    private Node get(int index){
        
    }

    public List<String> list() {
        ArrayList<String> lista = new ArrayList<>();
        Node nodo = first;
        while (nodo != null) {
            lista.add(nodo.getValue());
            nodo = nodo.getNext();
        }
        return lista;
    }

    public void removeFirst() {
        if (first != null) {
            first = first.getNext();
        }
    }

    public void remove(int index) {
        int i = 0;
        Node nodo = first;
        while (i < index - 1) {
            nodo = nodo.getNext();
            i++;
        }
        Node proximoNodo = nodo.getNext().getNext();
        nodo.setNext(proximoNodo);
    }

    public void add(int index, String value) {
        Node novoNodo = new Node(value);
        int i = 0;
        Node nodo = first;
        while (i < index - 1) {
            nodo = nodo.getNext();
            i++;
        }
        Node proximoNodo = nodo.getNext();
        novoNodo.setNext(proximoNodo);
        nodo.setNext(novoNodo);
    }

    // Classes internas
    private class Node {

        private String value;

        private Node next;

        public Node(String value, Node next) {
            this.value = value;
            this.next = next;
        }

        public Node(String value) {
            this.value = value;
        }

        public Node getNext() {
            return this.next;
        }

        public String getValue() {
            return this.value;
        }

        public void setNext(Node next) {
            this.next = next;
        }
    }

}
