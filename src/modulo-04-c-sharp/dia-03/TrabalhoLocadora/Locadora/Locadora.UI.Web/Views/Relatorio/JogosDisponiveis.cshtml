@model Locadora.UI.Web.Models.RelatorioModel

@{
    ViewBag.Title = "JogosDisponiveis";
}


<section>
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>Bit Games</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="alert alert-success">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-heading">Lista de Jogos Disponiveis</li>
                    @{
                        foreach (var jogo in @Model.Relatorio().Jogos)
                        {
                            <li class="list-group-item text-success">
                                <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                                @jogo.Nome
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="alert alert-success">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-heading">
                        Estatísticas
                    </li>
                    <li class="list-group-item">
                        Quantidade de jogos disponíveis: @Model.Relatorio().QuantidadeDeJogosDisponiveis
                    </li>
                    <li class="list-group-item">
                        Valor  médio por jogo: R$ @Model.Relatorio().ValorMedioPorJogo
                    </li>
                    <li class="list-group-item">
                        Jogo mais caro: @Model.Relatorio().JogoMaisCaro.Nome
                    </li>
                    <li class="list-group-item">
                        Jogo mais caro: @Model.Relatorio().JogoMaisBarato.Nome
                    </li>
                </ul>
                    
            </div>
        </div>
    </div>
</section>

