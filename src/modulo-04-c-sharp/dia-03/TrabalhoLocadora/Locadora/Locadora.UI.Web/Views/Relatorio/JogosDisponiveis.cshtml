@model Locadora.UI.Web.Models.RelatorioModel

@{
    ViewBag.Title = "JogosDisponiveis";
}


<section>
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success">
                Quantidade de jogos disponíveis: @Model.RelatorioJogosDisponiveis().QuantidadeJogosDisponiveis
            </div>
            <ul class="list-group">
                @{ 
                    foreach (var jogo in @Model.RelatorioJogosDisponiveis().Jogos)
                    {
                        <li class="list-group-item text-success">
                            <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                            @jogo.Nome
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</section>

