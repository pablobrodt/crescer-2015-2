@model RelatorioModel
@{
    ViewBag.Title = "Jogos Disponiveis";
}
<div class="row">
    <div class="col-lg-12">
        <h1>Jogos Disponiveis</h1>
    </div>
</div>
@{
    if (TempData.ContainsKey("Mensagem"))
    {
        <div class="alert alert-success" role="alert">@TempData["Mensagem"]</div>
    }

    if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-danger">@ViewBag.Mensagem</div>
    }
}

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Preco</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var jogo in Model.Jogos)
            {
                <tr>
                    <td>@jogo.Nome</td>
                    <td>@jogo.Categoria</td>
                    <td>@jogo.Preco.ToString("c")</td>
                    <td>
                        <ul class="nav nav-pills">
                            <li class="active">
                                <a href="~/Jogo/DetalhesDoJogo/@jogo.Id">
                                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                                </a>
                            </li>
                            <li class="active">
                                <a href="~/Jogo/Manter/@jogo.Id">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a>
                            </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Informações Gerais</th>
        </tr>
        <tr>
            <td colspan="3">Quantidade Total de Jogos: @Model.QuantidadeTotalJogos</td>
        </tr>
        <tr>
            <td colspan="3">Média de Preço por Jogo: @Model.ValorMedioJogos</td>
        </tr>
        <tr>
            <td colspan="3">Jogo Mais Caro: @Model.JogoMaisCaro</td>
        </tr>
        <tr>
            <td colspan="3">Jogo Mais Barato: @Model.JogoMaisBarato</td>
        </tr>
    </tfoot>
</table>

