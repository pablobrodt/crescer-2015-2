@model RelatorioModel
@{
    ViewBag.Title = "JogosDisponiveis";
}

<h2>JogosDisponiveis</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Preco</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var jogo in Model.Jogos)
            {
                <tr>
                    <td>@jogo.Nome</td>
                    <td>@jogo.Categoria</td>
                    <td>@jogo.Preco.ToString("c")</td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Informações Gerais</th>
        </tr>
        <tr>
            <td colspan="3">Quantidade Total de Jogos: @Model.QuantidadeTotalJogos</td>
        </tr>
        <tr>
            <td colspan="3">Média de Preço por Jogo: @Model.ValorMedioJogos</td>
        </tr>
        <tr>
            <td colspan="3">Jogo Mais Caro: @Model.JogoMaisCaro</td>
        </tr>
        <tr>
            <td colspan="3">Jogo Mais Barato: @Model.JogoMaisBarato</td>
        </tr>
    </tfoot>
</table>

