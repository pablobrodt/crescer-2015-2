@model ClienteModel
@{
    ViewBag.Title = "Manutenção de Cliente";
}

@if (Model == null || Model.Id == null)
{
    <h2>Cadastro de Cliente</h2>
}
else
{
    <h2>Edição de Cliente</h2>
}

@using (Html.BeginForm("Salvar", "Cliente", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    @Html.HiddenFor(m => m.Id)    

    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nome)
        </div>        
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Idade, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Idade, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Idade)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EmailConfimacao, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.EmailConfimacao, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.EmailConfimacao)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categoria, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.EnumDropDownListFor(m => m.Categoria, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Categoria)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IdJogo, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.IdJogo, (IEnumerable<SelectListItem>)@ViewBag.ListaJogos, "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.IdJogo)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}