@model Locadora.Dominio.Selo

@{ 
    string imgSelo = "";

    switch (Model)
    {
        case Locadora.Dominio.Selo.Bronze:
            imgSelo = "~/Content/Images/bronze-medal.png";
            break;
        case Locadora.Dominio.Selo.Prata:
            imgSelo = "~/Content/Images/silver-medal.png";
            break;
        case Locadora.Dominio.Selo.Ouro:
            imgSelo = "~/Content/Images/gold-medal.png";
            break;
        default:
            break;
    }
}

<img src="@Url.Content(imgSelo)" class="imagem-selo-jogo" alt="Selo do Jogo" />