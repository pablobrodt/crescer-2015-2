@model JogoModel

@{
    ViewBag.Title = "Detalhes Do Jogo";
}


<section>
    <div class="row">
        <div class="col-lg-3">
            <img class="img-responsive" src="@Model.Imagem" />
        </div>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <h3>@Model.Nome</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Preço: @Model.Preco
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Selo: @Model.Selo
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    Categoria: @Model.Categoria
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Model.Video
        </div>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Descrição</h3>
                    <p>@Model.Descricao</p>
                </div>
            </div>
        </div>
    </div>
</section>
